<div class="panel panel-default">
  <div class="panel-heading" data-toggle="collapse" data-target="#settings">
    <h3 class="panel-title">
      <%= object.class.name.underscore.humanize.titleize %> EAD Settings
      <% if object.is_a? Component %>
        <small><%= object.cid %>: <%= object.name %></small>
      <% end %>
      <span class="caret"></span>
    </h3>
  </div>
  <% shown ||= false %>
  <div id="settings" class="panel-body <%= shown ? '' : 'collapse' %>">
    <%= form_for [object, object.setting], format: :json, remote: true do |f| %>
      <%= render partial: 'settings/fields', locals: { f: f } %>
      <%= f.submit class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
